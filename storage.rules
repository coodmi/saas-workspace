rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Allow read access to authenticated users for their own files
    match /users/{userId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }
    
    // Team files
    match /teams/{teamId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Project files
    match /projects/{projectId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Chat attachments
    match /chat/{channelId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Profile pictures
    match /avatars/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }
    
    // General uploads with size limit
    match /{allPaths=**} {
      allow read: if isAuthenticated();
      // Allow write if authenticated and file is less than 50MB
      allow write: if isAuthenticated() && request.resource.size < 50 * 1024 * 1024;
    }
  }
}
